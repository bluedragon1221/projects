// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
  "name": "Data Science in Python",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "customizations": {
    "vscode": {
      "settings": {
        // Off by default, but configurable if not desired
        "python.analysis.typeCheckingMode": "off",
        "python.analysis.autoImportCompletions": true,
        "notebook.cellFocusIndicator": "border",
        "notebook.output.scrolling": true
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "donjayamanne.vscode-default-python-kernel",
        "mechatroner.rainbow-csv"
      ]
    }
  },
  "postCreateCommand": "sh -c \"$(curl -fsSL https://raw.githubusercontent.com/romkatv/zsh4humans/v5/install)\"",
  "remoteUser": "root"
}
